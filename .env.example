# Telegram Bot Token from @BotFather
BOT_TOKEN=your_telegram_bot_token_here

# PostgreSQL Database URL
# For Docker: will be auto-generated from POSTGRES_* variables
# For local: postgresql+asyncpg://user:password@localhost:5432/telegram_bot
DATABASE_URL=postgresql+asyncpg://botuser:botpassword@localhost:5432/telegram_bot

# PostgreSQL credentials (used by Docker Compose)
POSTGRES_USER=botuser
POSTGRES_PASSWORD=botpassword
POSTGRES_DB=telegram_bot

# Redis URL for task queue
# For Docker: redis://redis:6379/0
# For local: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Webhook URL (your server's public URL)
WEBHOOK_URL=https://your-domain.com

# Initial tokens for new users (7 tokens = 1 High quality or several Medium)
INITIAL_TOKENS=7

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Webhook settings
TELEGRAM_REQUEST_TIMEOUT=60
WEBHOOK_MAX_RETRIES=5
WEBHOOK_RETRY_DELAY_SECONDS=2
WEBHOOK_RETRY_BACKOFF=2
DISABLE_WEBHOOK=0
DELETE_WEBHOOK_ON_SHUTDOWN=1
WEBHOOK_SECRET_TOKEN=your_secret_token_here

# FSM Storage (0 = Memory, 1 = Redis)
USE_REDIS_FSM_STORAGE=0

# Generation settings
# Threshold for double confirmation (in user tokens, 20 = High quality)
HIGH_COST_THRESHOLD=20
# Rate limiting: max tasks per user per hour
MAX_TASKS_PER_USER_PER_HOUR=20

# Admin settings
# Comma-separated list of Telegram user IDs who have admin access
# Get your ID from @userinfobot
ADMIN_IDS=123456789,987654321
# API key for HTTP admin endpoints (generate a random string)
ADMIN_API_KEY=your_admin_api_key_here

# Support
# Username for support contact (e.g., @support_username)
SUPPORT_USERNAME=@your_support_username

# Subscription settings
# Channel username for subscription check (e.g., @nkonshin_ai)
# Bot must be admin of this channel to check subscriptions
SUBSCRIPTION_CHANNEL=@nkonshin_ai
# Require subscription for new users (true/false)
SUBSCRIPTION_REQUIRED=true

# Welcome video
# file_id of video note (circle video) to send on /start
# Get file_id by sending video note to bot as admin - bot will show the ID
WELCOME_VIDEO_FILE_ID=

# YooKassa Payment Integration
# Get credentials from https://yookassa.ru/my/merchant/integration/api-keys
YOOKASSA_SHOP_ID=your_shop_id_here
YOOKASSA_SECRET_KEY=your_secret_key_here
# Return URL after payment (your bot's deep link)
YOOKASSA_RETURN_URL=https://t.me/your_bot_username
